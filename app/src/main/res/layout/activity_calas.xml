<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Layouts.Calas">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvObra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etMVSM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="M.V.S.M. (kgf/m³)" />

    <EditText
        android:id="@+id/etPesomaterialCala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Peso del material (kgf)" />

    <EditText
        android:id="@+id/etVolumenCala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"

        android:ems="10"
        android:hint="Volumen (cm³)" />

    <EditText
        android:id="@+id/etHuemdadCala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"

        android:hint="Humedad en %" />

    <Button
        android:id="@+id/bCalcularCala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Calcular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvResultadoCala"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:height="35sp"
        android:hint="M.V.S. muestra" />

        <TextView
            android:id="@+id/tvResultadoCompactacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="% Compactación"
            android:height="35sp"
            android:gravity="center"

            />
    </LinearLayout>

    <Button
        android:id="@+id/bRegresarCalas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="regresar"
        android:ems="10"


        />


</LinearLayout>